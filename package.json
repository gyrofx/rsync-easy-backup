{
  "name": "backup-rsync",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build": "yarn esbuild main.ts --bundle --platform=node --outdir=build --out-extension:.js=.cjs",
    "buildAndPack": "yarn build && yarn pkg -t node18-linux-x64 -o dist/rsync-backup build/main.cjs",
    "buildAndPackWin": "yarn build && yarn pkg -t  node18-win -o dist/rsync-backup build/main.cjs",
    "start": "yarn tsx src/main.ts",
    "test": "vitest",
    "lint": "yarn eslint; yarn prettier; yarn tsc-lint-server",
    "prettier": "prettier --check --write .",
    "eslint": "eslint --fix src",
    "tsc-lint-server:watch": "yarn tsc-lint-server --watch",
    "tsc-lint-server": "tsc --project tsconfig.server.json --noEmit",
    "ts-node": "ts-node --project tsconfig.json"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^11.0.0",
    "@types/email-templates": "^10.0.1",
    "@types/inquirer": "^9.0.3",
    "@types/nodemailer": "^6.4.9",
    "assert-never": "^1.2.1",
    "commander": "^11.0.0",
    "conditional-type-checks": "^1.0.6",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "email-templates": "^11.1.1",
    "find-process": "^1.4.7",
    "inquirer": "^9.2.10",
    "lodash-es": "^4.17.21",
    "node-ssh": "^13.1.0",
    "nodemailer": "^6.9.4",
    "pretty-bytes": "^6.1.1",
    "pug": "^3.0.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/lodash-es": "^4.17.7",
    "@types/node": "^18.14.0",
    "@types/ssh2": "^1.11.13",
    "concurrently": "^6.0.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-formatter-gitlab": "^3.0.0",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.23.4 <2.25.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.2.1",
    "eslint-plugin-vitest": "^0.1.4",
    "pkg": "^5.8.1",
    "prettier": "^2.2.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5",
    "vite": "^4.0.4",
    "vite-plugin-svgr": "^2.4.0",
    "vite-tsconfig-paths": "^4.0.3",
    "vitest": "^0.28.5"
  },
  "prettier": {
    "$schema": "http://json.schemastore.org/prettierrc",
    "printWidth": 120,
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true
  }
}
